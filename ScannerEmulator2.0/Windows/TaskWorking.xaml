<UserControl x:Class="ScannerEmulator2._0.Windows.TaskWorking"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Border Width="980" Height="630" Background="White" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- === Заголовок === -->
                <TextBlock Grid.Row="0" Text="🎥 Управление активными камерами"
                           FontSize="26" FontWeight="Bold"
                           Margin="10,0,0,20"/>

                <!-- === Список камер === -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ActiveCamerasPanel">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD" BorderThickness="1" Background="WhiteSmoke"
                                        CornerRadius="8" Padding="12" Margin="6">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Верхняя строка: Название камеры и кнопка X -->
                                        <Grid Grid.Row="0" Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding FileName}" 
                                                           FontSize="12"
                                                           Foreground="Gray"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>

                                            <!-- Кнопка X в правом верхнем углу -->
                                            <Button Grid.Column="1" 
                                                    Content="✕"
                                                    Tag="{Binding Name}"
                                                    Click="DeleteTask_Click"
                                                    Width="25"
                                                    Height="25"
                                                    Padding="0"
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Background="#ff4444"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    BorderBrush="#cc0000"
                                                    ToolTip="Удалить задачу">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#ff4444"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#ff6666"/>
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter Property="Background" Value="#cc0000"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>

                                        <!-- Поля настроек с заголовками -->
                                        <Border Grid.Row="1" 
                                                Background="#f8f9fa" 
                                                BorderBrush="#e9ecef" 
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Padding="10"
                                                Margin="0,0,0,10">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="Настройки отправки" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="12"
                                                           Foreground="#495057"
                                                           Margin="0,0,0,8"/>

                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Header -->
                                                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,8,0">
                                                        <TextBlock Text="Header" 
                                                                   FontSize="11" 
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#6c757d"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,4"/>
                                                        <TextBox Text="{Binding DataHeader}" 
                                                                 Height="25" 
                                                                 FontSize="12"
                                                                 Padding="4,2"
                                                                 Background="White"
                                                                 BorderBrush="#ced4da"
                                                                 BorderThickness="1"
                                                                 ToolTip="Заголовок данных"/>
                                                    </StackPanel>

                                                    <!-- Terminator -->
                                                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="4,0,4,0">
                                                        <TextBlock Text="Terminator" 
                                                                   FontSize="11" 
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#6c757d"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,4"/>
                                                        <TextBox Text="{Binding DataTerminator}" 
                                                                 Height="25" 
                                                                 FontSize="12"
                                                                 Padding="4,2"
                                                                 Background="White"
                                                                 BorderBrush="#ced4da"
                                                                 BorderThickness="1"
                                                                 ToolTip="Терминатор данных"/>
                                                    </StackPanel>

                                                    <!-- Separator -->
                                                    <StackPanel Grid.Column="2" Orientation="Vertical" Margin="4,0,4,0">
                                                        <TextBlock Text="Separator" 
                                                                   FontSize="11" 
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#6c757d"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,4"/>
                                                        <TextBox Text="{Binding DataSeparator}" 
                                                                 Height="25" 
                                                                 FontSize="12"
                                                                 Padding="4,2"
                                                                 Background="White"
                                                                 BorderBrush="#ced4da"
                                                                 BorderThickness="1"
                                                                 ToolTip="Разделитель данных"/>
                                                    </StackPanel>

                                                    <!-- Delay -->
                                                    <StackPanel Grid.Column="3" Orientation="Vertical" Margin="4,0,4,0">
                                                        <TextBlock Text="Delay (ms)" 
                                                                   FontSize="11" 
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#6c757d"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,4"/>
                                                        <TextBox Text="{Binding Delay}" 
                                                                 Height="25" 
                                                                 FontSize="12"
                                                                 Padding="4,2"
                                                                 Background="White"
                                                                 BorderBrush="#ced4da"
                                                                 BorderThickness="1"
                                                                 ToolTip="Задержка в миллисекундах"/>
                                                    </StackPanel>

                                                    <!-- GroupCount -->
                                                    <StackPanel Grid.Column="4" Orientation="Vertical" Margin="8,0,0,0">
                                                        <TextBlock Text="Group Count" 
                                                                   FontSize="11" 
                                                                   FontWeight="SemiBold"
                                                                   Foreground="#6c757d"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,0,0,4"/>
                                                        <TextBox Text="{Binding GroupCount}" 
                                                                 Height="25" 
                                                                 FontSize="12"
                                                                 Padding="4,2"
                                                                 Background="White"
                                                                 BorderBrush="#ced4da"
                                                                 BorderThickness="1"
                                                                 ToolTip="Количество в группе"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Border>

                                        <!-- ProgressBar для отображения прогресса -->
                                        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,10">
                                            <TextBlock Text="Прогресс отправки:" 
                                                       FontSize="11" 
                                                       Foreground="Gray" 
                                                       Margin="0,0,0,4"/>
                                            <ProgressBar Value="{Binding ProgressValue, UpdateSourceTrigger=PropertyChanged}" 
                                                        Minimum="0" 
                                                        Maximum="100" 
                                                        Height="15"
                                                        Background="#E0E0E0"
                                                        BorderThickness="1"
                                                        BorderBrush="#CCCCCC">
                                                <ProgressBar.Foreground>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#4CAF50" Offset="0"/>
                                                        <GradientStop Color="#8BC34A" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </ProgressBar.Foreground>
                                            </ProgressBar>
                                            <TextBlock Text="{Binding ProgressText, UpdateSourceTrigger=PropertyChanged}" 
                                                       HorizontalAlignment="Center" 
                                                       FontSize="10" 
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <!-- Кнопки управления -->
                                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="▶ Начать"
                                                    Tag="{Binding Name}"
                                                    Click="Start_Click"
                                                    Margin="4"
                                                    Padding="12,4"
                                                    FontSize="13"
                                                    Background="#28a745"
                                                    Foreground="White"
                                                    BorderThickness="0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#28a745"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#218838"/>
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Content="⏸ Пауза"
                                                    Tag="{Binding Name}"
                                                    Click="Pause_Click"
                                                    Margin="4"
                                                    Padding="12,4"
                                                    FontSize="13"
                                                    Background="#ffc107"
                                                    Foreground="#212529"
                                                    BorderThickness="0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#ffc107"/>
                                                        <Setter Property="Foreground" Value="#212529"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#e0a800"/>
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Content="⏵ Продолжить"
                                                    Tag="{Binding Name}"
                                                    Click="Resume_Click"
                                                    Margin="4"
                                                    Padding="12,4"
                                                    FontSize="13"
                                                    Background="#17a2b8"
                                                    Foreground="White"
                                                    BorderThickness="0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#17a2b8"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#138496"/>
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                            <Button Content="⏹ Прервать"
                                                    Tag="{Binding Name}"
                                                    Click="Stop_Click"
                                                    Margin="4"
                                                    Padding="12,4"
                                                    FontSize="13"
                                                    Background="#dc3545"
                                                    Foreground="White"
                                                    BorderThickness="0">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="#dc3545"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#c82333"/>
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>

                                        <TextBlock Grid.Row="4" 
                                                   Text="{Binding Status}"
                                                   FontStyle="Italic"
                                                   Foreground="Gray"
                                                   FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,10,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- === Нижняя панель === -->
                <TextBlock Grid.Row="2" x:Name="StatusLabel"
                           Text="Отображаются все активные камеры"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontStyle="Italic"
                           Foreground="Gray"
                           Margin="0,15,0,0"/>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>