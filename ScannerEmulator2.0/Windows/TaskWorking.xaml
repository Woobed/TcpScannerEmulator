<UserControl x:Class="ScannerEmulator2._0.Windows.TaskWorking"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Border Width="980" Height="630" Background="White" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- === Заголовок === -->
                <TextBlock Grid.Row="0" Text="🎥 Управление активными камерами"
                           FontSize="26" FontWeight="Bold"
                           Margin="10,0,0,20"/>

                <!-- === Список камер === -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ActiveCamerasPanel">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DDD" BorderThickness="1" Background="WhiteSmoke"
                                        CornerRadius="8" Padding="12" Margin="6">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding FileName}" 
                                                    FontSize="12"
                                                    Foreground="Gray"
                                                    TextTrimming="CharacterEllipsis"
                                                    Margin="0,4,0,0"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="▶ Начать"
                                                    Tag="{Binding Name}"
                                                    Click="Start_Click"
                                                    Margin="4"
                                                    Padding="12,4"
                                                    FontSize="13"/>
                                            <Button Content="⏸ Пауза"
                                                    Tag="{Binding Name}"
                                                    Click="Pause_Click"
                                                    Margin="4"
                                                    Padding="12,4"
                                                    FontSize="13"/>
                                            <Button Content="⏵ Продолжить"
                                                    Tag="{Binding Name}"
                                                    Click="Resume_Click"
                                                    Margin="4"
                                                    Padding="12,4"
                                                    FontSize="13"/>
                                            <Button Content="⏹ Прервать"
                                                    Tag="{Binding Name}"
                                                    Click="Stop_Click"
                                                    Margin="4"
                                                    Padding="12,4"
                                                    FontSize="13"
                                                    Background="#ffdddd"/>
                                        </StackPanel>

                                        <TextBlock Text="{Binding Status}"
                                                   FontStyle="Italic"
                                                   Foreground="Gray"
                                                   FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- === Нижняя панель === -->
                <TextBlock Grid.Row="2" x:Name="StatusLabel"
                           Text="Отображаются все активные камеры"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontStyle="Italic"
                           Foreground="Gray"
                           Margin="0,15,0,0"/>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>
