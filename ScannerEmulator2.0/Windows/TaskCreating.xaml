<UserControl x:Class="ScannerEmulator2._0.Windows.TaskCreating"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Border Width="980" Height="630" Background="White" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.4*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.4*"/>
                </Grid.ColumnDefinitions>

                <!-- === Раздел 1: Файлы === -->
                <Border Grid.Column="0" Margin="5" Background="WhiteSmoke" Padding="15"
                        BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="📂 Файлы" FontSize="20" FontWeight="Bold" Padding="0,0,14,0" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                        <ListBox Grid.Row="1" x:Name="FilesListBox" Margin="0,0,0,15" 
                                 FontSize="14" SelectionChanged="FilesListBox_SelectionChanged"/>

                        <TextBox Grid.Row="2" x:Name="NewFileName" Height="30" Margin="0,0,0,8" 
                                 Text="FileName" FontSize="14"/>

                        <Button Grid.Row="3" Content="Создать новый файл" Height="35" Margin="0,0,0,8" 
                                Click="CreateNewFile_Click" FontSize="14"/>

                        <Button Grid.Row="4" Content="Удалить файл" Height="35" Margin="0,0,0,15" 
                                Click="DeleteFile_Click" FontSize="14"/>

                        <TextBlock Grid.Row="5" x:Name="SelectedFileLabel" Text="Файл не выбран"
                                   FontStyle="Italic" Foreground="Gray" VerticalAlignment="Bottom" FontSize="12"/>
                    </Grid>
                </Border>

                <!-- === Раздел 2: Просмотр файла === -->
                <Border Grid.Column="1" Margin="5" Background="WhiteSmoke" Padding="15"
                        BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="📄 Содержимое файла" FontSize="20" FontWeight="Bold" Padding="0,0,14,0" Margin="0,0,0,15" HorizontalAlignment="Center"/>

                        <TextBox Grid.Row="1" x:Name="FileContentTextBox"
                                 Text="Выберите файл, чтобы просмотреть содержимое..."
                                 IsReadOnly="False"
                                 AcceptsReturn="True"
                                 TextWrapping="NoWrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 Margin="0,0,0,15"
                                 Background="White"
                                 FontSize="13"
                                 TextChanged="FileContentTextBox_TextChanged"
                                 LostFocus="FileContentTextBox_LostFocus"/>

                        <TextBlock Grid.Row="2" x:Name="AutoSaveStatusText" Text="" HorizontalAlignment="Center"
                                  FontStyle="Italic" Foreground="Gray" VerticalAlignment="Bottom" FontSize="12"/>
                    </Grid>
                </Border>

                <!-- === Раздел 3: Камеры === -->
                <Border Grid.Column="2" Margin="5" Background="WhiteSmoke" Padding="1"
                        BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="📸 Камеры" FontSize="20" FontWeight="Bold" Padding="0,15,14,15" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,15" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Center">
                                <TextBlock Text="IP:" VerticalAlignment="Center" Padding ="6.7,0,0,0" Margin="0,0,10,0" FontSize="14"/>
                                <TextBox x:Name="IpTextBox" Width="90" Text="127.0.0.1" FontSize="14" Margin="5,0,0,0" Height="25"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Center">
                                <TextBlock Text="Port:" VerticalAlignment="Center" Width="38" FontSize="14"/>
                                <TextBox x:Name="PortTextBox" Width="90" Text="9000" FontSize="14" Height="25"/>
                            </StackPanel>
                        </StackPanel>


                        <Button Grid.Row="2" Content="Создать" Width="120" Height="35" Margin="0,0,0,20" 
                                HorizontalAlignment="Center" Click="CreateCamera_Click" FontSize="14"/>

                        <TextBlock Grid.Row="3" Text="Список камер:" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,10" FontSize="16"/>

                        <ListBox Grid.Row="4" x:Name="CamerasListBox" FontSize="12">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#CCC" BorderThickness="1" Padding="8" Margin="4" 
                                            CornerRadius="6" Background="White">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                <Button Content="Назначить файл"
                                                        Tag="{Binding Name}"
                                                        Click="AssignFile_Click"
                                                        Margin="0,0,8,0"
                                                        Padding="12,4"
                                                        FontSize="11"/>
                                                <Button Content="Удалить"
                                                        Tag="{Binding Name}"
                                                        Click="DeleteCamera_Click"
                                                        Padding="12,4"
                                                        FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>