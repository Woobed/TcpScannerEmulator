        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:ScannerEmulator2._0.Windows"
        Title="Scanner Emulator Suite"
        Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FFF9FAFB">

    <Grid Margin="10">
        <TabControl FontSize="14" BorderBrush="#CCC" BorderThickness="1">
            <TabItem Header="📸 Создание заданий">
                <views:TaskCreating/>
            </TabItem>

            <TabItem Header="⚙️  Активные задания">
                <views:TaskWorking/>
            </TabItem>
        </TabControl>
    </Grid>
